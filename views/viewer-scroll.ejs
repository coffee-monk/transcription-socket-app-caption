<!DOCTYPE html>
<html>
  <head>
    <script src="/socket.io/socket.io.js"></script>
    <style>
      * {
        margin: 0px;
        padding: 0px;
      }

      body {
        height: 100vh;
        width: 100vw;
        background-color: #333;
        max-width: 100%;
        margin: 0;
        border: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .main-container {
        width: calc(100% - 0.2rem);
        height: calc(100% - 0.2rem);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .text-output-container {
        background-color: black;
        color: seashell;
        height: calc(100% - 0.5rem);
        width: calc(100% - 0.5rem);
        max-width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      #text-output {
        height: calc(100vh - 1.5rem);
        width: calc(100vw - 1.5rem);
        margin: 0 0;
        overflow-y: auto;
        overflow-x: hidden;
        font-family: "Arial", "Helvetica";
        font-size: 2rem;
      }

      /* width */
      ::-webkit-scrollbar {
        width: 8px;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 15px;
      }

      /* Handle on hover */
      ::-webkit-scrollbar-thumb:hover {
        background: #555;
      }

      /* === Context Menu === */
      .overlay {
        height: 100%;
        width: 100%;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #333;
        display: none;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
      }

      .overlay-content {
        position: relative;
        text-align: center;
      }

      .overlay h5 {
        padding: 8px;
        text-decoration: none;
        font-size: 36px;
        color: #818181;
        display: block;
        transition: 0.3s;
        cursor: pointer;
      }

      .overlay h5:hover {
        color: #f1f1f1;
      }

      .overlay .closebtn {
        position: absolute;
        top: 20px;
        right: 40px;
        font-size: 60px;
      }
    </style>
  </head>
  <body>
    <div class="main-container">
      <div class="text-output-container">
        <div id="text-output"><%- textLoad %></div>
      </div>
    </div>

    <div class="overlay">
      <h5 class="closebtn">X</h5>
      <div class="overlay-content">
        <h5>About</h5>
        <h5>Services</h5>
        <h5>Clients</h5>
      </div>
    </div>

    <script>
      const room = "<%= room %>"
      let textOutput = document.querySelector("#text-output")
      let val = textOutput.scrollHeight
      textOutput.scrollTo(0, val)

      textOutput.addEventListener("scroll", e => {
        val = e.target.scrollTop
      })

      console.log(room)

      const socket = io.connect({
        query: {
          room: room,
          type: "viewer",
        },
      })

      socket.on("text:view", ({ textScroll }) => {
        textOutput.innerHTML = ""
        textOutput.innerHTML = textScroll

        // scroll to bottom for new lines printed
        if (
          Math.round(val) + textOutput.clientHeight >=
          textOutput.scrollHeight - 1
        ) {
          val = textOutput.scrollHeight
        }
        textOutput.scrollTo(0, val)
      })

      // alert user if connection is lost
      socket.on("disconnect", () => {
        alert("No Connection to Server: Reload Page & Check Room-Name")
      })

      // Context Menu =====================================
      const close = document.querySelector(".closebtn")
      const overlay = document.querySelector(".overlay")

      window.addEventListener("contextmenu", e => {
        event.preventDefault()
        overlay.style.display = "flex"
      })
      close.addEventListener("click", e => {
        overlay.style.display = "none"
      })
    </script>
  </body>
</html>
